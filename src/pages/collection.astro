---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import { CARD_CATALOG, RARITY_COLORS } from '../lib/cards';
---

<BaseLayout title="My Collection" description="Browse your Inspired Mile card collection — characters, relics, and potions from Shakespeare's greatest works.">

  <!-- Header -->
  <section class="section-padding pb-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-4xl sm:text-5xl font-display font-bold mb-4">
          My <span class="text-gradient">Collection</span>
        </h1>
        <p class="text-obsidian-400 max-w-2xl mx-auto">
          Your Shakespeare card collection. Locked cards can be earned in the
          <a href="/playground" class="text-gold-400 hover:text-gold-300 underline">Playground</a>.
        </p>
        <p class="text-sm text-obsidian-500 mt-2">
          <span id="owned-count" class="text-gold-400 font-mono">0</span> / {CARD_CATALOG.length} cards owned
        </p>
      </div>

      <!-- Filters -->
      <div class="flex flex-wrap justify-center gap-3 mb-12" id="filters">
        <button data-filter="all" class="filter-btn active px-4 py-2 text-sm rounded-lg bg-gold-500/20 text-gold-400 border border-gold-500/30 hover:bg-gold-500/30 transition-all">All</button>
        <button data-filter="Character" class="filter-btn px-4 py-2 text-sm rounded-lg bg-obsidian-800 text-obsidian-300 border border-obsidian-700 hover:border-gold-500/30 transition-all">Characters</button>
        <button data-filter="Relic" class="filter-btn px-4 py-2 text-sm rounded-lg bg-obsidian-800 text-obsidian-300 border border-obsidian-700 hover:border-gold-500/30 transition-all">Relics</button>
        <button data-filter="Potion" class="filter-btn px-4 py-2 text-sm rounded-lg bg-obsidian-800 text-obsidian-300 border border-obsidian-700 hover:border-gold-500/30 transition-all">Potions</button>
        <button data-filter="owned" class="filter-btn px-4 py-2 text-sm rounded-lg bg-obsidian-800 text-obsidian-300 border border-obsidian-700 hover:border-gold-500/30 transition-all">Owned</button>
      </div>
    </div>
  </section>

  <!-- Card Grid -->
  <section class="px-4 sm:px-6 lg:px-8 pb-24">
    <div class="max-w-7xl mx-auto">
      <!-- Loading Skeleton -->
      <div id="loading-skeleton" class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {Array(8).fill(null).map(() => (
          <div class="card-glass rounded-xl overflow-hidden animate-pulse">
            <div class="bg-obsidian-800 h-48"></div>
            <div class="p-4 space-y-3">
              <div class="bg-obsidian-800 rounded h-5 w-3/4"></div>
              <div class="bg-obsidian-800 rounded h-3 w-1/2"></div>
              <div class="flex gap-4">
                <div class="bg-obsidian-800 rounded h-3 w-12"></div>
                <div class="bg-obsidian-800 rounded h-3 w-12"></div>
                <div class="bg-obsidian-800 rounded h-3 w-12"></div>
              </div>
              <div class="bg-obsidian-800 rounded h-3 w-full"></div>
            </div>
          </div>
        ))}
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 hidden" id="card-grid">
        {CARD_CATALOG.map((card) => (
          <div
            class={`card-item card-glass p-0 overflow-hidden transition-all duration-300 group cursor-pointer ${card.border}`}
            data-type={card.type}
            data-id={card.id}
            data-rarity={card.rarity}
          >
            <!-- Card Art -->
            <div class={`h-48 bg-gradient-to-br ${card.gradient} flex items-center justify-center relative overflow-hidden`}>
              {card.image ? (
                <img
                  src={card.image}
                  alt={card.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                  loading="lazy"
                />
              ) : (
                <div class="card-icon text-5xl opacity-80 group-hover:scale-110 transition-transform duration-300">
                  {card.icon}
                </div>
              )}
              <span class={`absolute top-3 right-3 px-2 py-0.5 text-xs rounded-full font-medium ${RARITY_COLORS[card.rarity]}`}>
                {card.rarity}
              </span>
              <span class="absolute top-3 left-3 text-xs font-mono text-obsidian-400/60">{card.id}</span>

              <!-- Lock overlay (toggled by JS) -->
              <div class="lock-overlay absolute inset-0 bg-obsidian-950/70 flex items-center justify-center hidden">
                <div class="text-center">
                  <svg class="w-8 h-8 text-obsidian-500 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                  <span class="text-xs text-obsidian-500">Locked</span>
                </div>
              </div>

              <!-- Mint badge (future, shown on minted cards) -->
              <div class="mint-badge absolute bottom-3 right-3 hidden items-center gap-1 text-xs text-emerald-400/80 bg-emerald-500/10 px-2 py-0.5 rounded-full border border-emerald-500/20">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                On-chain
              </div>
            </div>

            <!-- Card Info -->
            <div class="p-4">
              <div class="flex items-center justify-between mb-1">
                <h3 class="font-display text-lg font-semibold text-obsidian-100">{card.name}</h3>
              </div>
              <p class="text-xs text-obsidian-500 mb-3">{card.house} &middot; {card.element}</p>

              {card.type === 'Character' && (
                <div class="flex items-center gap-4 mb-3 text-xs">
                  <span class="text-crimson-400">ATK {card.atk}</span>
                  <span class="text-blue-400">DEF {card.def}</span>
                  <span class="text-emerald-400">HP {card.hp}</span>
                </div>
              )}

              <p class="text-xs text-obsidian-400 italic leading-relaxed line-clamp-2">"{card.quote}"</p>

              <!-- Duplicate count -->
              <div class="dup-badge hidden mt-2">
                <span class="text-xs text-obsidian-500">x<span class="dup-count">1</span></span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- World Cards Section -->
  <section class="px-4 sm:px-6 lg:px-8 pb-12">
    <div class="max-w-7xl mx-auto">
      <div class="border-t border-obsidian-800/50 pt-12">
        <h2 class="text-2xl sm:text-3xl font-display font-bold text-center mb-2">
          <span class="text-gradient">World Cards</span>
        </h2>
        <p class="text-obsidian-400 text-center text-sm mb-2">
          Your characters travel the globe. Win battles and ace trivia to unlock city variants.
        </p>
        <p class="text-sm text-obsidian-500 text-center mb-8">
          <span id="variant-count" class="text-gold-400 font-mono">0</span> variants unlocked
          &middot;
          <span id="city-count" class="text-gold-400 font-mono">0</span> / 12 cities discovered
        </p>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4" id="city-grid">
        </div>
        <div id="variant-list" class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        </div>
      </div>
    </div>
  </section>

  <!-- Deck Builder Section -->
  <section class="px-4 sm:px-6 lg:px-8 pb-12" id="deck-builder-section">
    <div class="max-w-7xl mx-auto">
      <div class="border-t border-obsidian-800/50 pt-12">
        <h2 class="text-2xl sm:text-3xl font-display font-bold text-center mb-2">
          <span class="text-gradient">Deck Builder</span>
        </h2>
        <p class="text-obsidian-400 text-center text-sm mb-8">
          Build a deck of 3–5 characters + up to 2 relics + up to 2 potions (7 max). Click owned cards above to add them.
        </p>

        <!-- Deck Controls -->
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <input id="deck-name" type="text" placeholder="Deck name..."
            class="flex-1 min-w-[200px] bg-obsidian-800 border border-obsidian-700 rounded-lg px-4 py-2 text-sm text-obsidian-100 placeholder-obsidian-500 focus:outline-none focus:border-gold-500/50" />
          <button id="save-deck-btn" class="btn-primary px-4 py-2 text-sm">Save Deck</button>
          <button id="clear-deck-btn" class="btn-secondary px-4 py-2 text-sm">Clear</button>
        </div>

        <!-- Deck Slots -->
        <div class="grid md:grid-cols-3 gap-6 mb-6">
          <div>
            <h3 class="text-sm font-display font-semibold text-obsidian-300 mb-2">
              Characters <span id="char-count" class="text-obsidian-500">(0/5)</span>
            </h3>
            <div id="deck-characters" class="space-y-2 min-h-[80px] p-3 rounded-lg border border-dashed border-obsidian-700 bg-obsidian-900/30">
              <p class="deck-placeholder text-xs text-obsidian-600 text-center py-4">Click owned characters to add</p>
            </div>
          </div>
          <div>
            <h3 class="text-sm font-display font-semibold text-obsidian-300 mb-2">
              Relics <span id="relic-count" class="text-obsidian-500">(0/2)</span>
            </h3>
            <div id="deck-relics" class="space-y-2 min-h-[80px] p-3 rounded-lg border border-dashed border-obsidian-700 bg-obsidian-900/30">
              <p class="deck-placeholder text-xs text-obsidian-600 text-center py-4">Click owned relics to add</p>
            </div>
          </div>
          <div>
            <h3 class="text-sm font-display font-semibold text-obsidian-300 mb-2">
              Potions <span id="potion-count" class="text-obsidian-500">(0/2)</span>
            </h3>
            <div id="deck-potions" class="space-y-2 min-h-[80px] p-3 rounded-lg border border-dashed border-obsidian-700 bg-obsidian-900/30">
              <p class="deck-placeholder text-xs text-obsidian-600 text-center py-4">Click owned potions to add</p>
            </div>
          </div>
        </div>

        <!-- Synergy Preview -->
        <div id="synergy-preview" class="hidden card-glass p-4 mb-6">
          <h3 class="text-sm font-display font-semibold text-gold-400 mb-2">Active Synergies</h3>
          <div id="synergy-list" class="space-y-1"></div>
        </div>

        <!-- Deck Errors -->
        <div id="deck-errors" class="hidden text-sm text-crimson-400 mb-4 card-glass p-3 bg-crimson-500/5 border-crimson-500/20"></div>

        <!-- Saved Decks -->
        <div class="mt-6">
          <h3 class="text-sm font-display font-semibold text-obsidian-300 mb-3">Saved Decks</h3>
          <div id="saved-decks-list" class="space-y-2">
            <p class="text-xs text-obsidian-600">No saved decks yet.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Card Detail Modal -->
  <div id="card-detail-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-obsidian-950/90 backdrop-blur-sm" id="modal-backdrop"></div>
    <div class="relative flex items-center justify-center min-h-screen p-4">
      <div class="card-glass max-w-lg w-full max-h-[90vh] overflow-y-auto relative">
        <button id="modal-close" class="absolute top-4 right-4 text-obsidian-400 hover:text-obsidian-200 z-10">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <div id="modal-content"></div>
      </div>
    </div>
  </div>

  <!-- Achievements Section -->
  <section class="px-4 sm:px-6 lg:px-8 pb-24">
    <div class="max-w-7xl mx-auto">
      <div class="border-t border-obsidian-800/50 pt-12">
        <h2 class="text-2xl sm:text-3xl font-display font-bold text-center mb-2">
          <span class="text-gradient">Achievements</span>
        </h2>
        <p class="text-obsidian-400 text-center text-sm mb-8">
          <span id="achievement-count" class="text-gold-400 font-mono">0</span> / <span id="achievement-total" class="font-mono">0</span> unlocked
        </p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4" id="achievement-grid"></div>
      </div>
    </div>
  </section>

  <script>
    import { getOwnedCardIds, getDuplicateCount } from '../lib/inventory';
    import {
      CITY_CATALOG,
      getAllCities,
      getOwnedVariants,
      getUnlockedCities,
      getVariantCount,
      decodeVariantId,
      getCityByCode,
    } from '../lib/variants';
    import { CARD_CATALOG, getCardById } from '../lib/cards';
    import { initAudio, isInitialized, playMusic, playSfx } from '../lib/audio-manager';
    import { hasARModel, getARModel, isARLikelySupported } from '../lib/ar-viewer';
    import { CHARACTER_ABILITIES, ITEM_EFFECTS, getActiveSynergies, DECK_RULES, type Deck } from '../lib/battle-rules';
    import { getSavedDecks, saveDeck, deleteDeck, setActiveDeck, getActiveDeckName } from '../lib/deck-manager';
    import { mintCardAsNFT } from '../lib/nft-mint';
    import { isConnected as isWalletConnected, getWalletAdapter } from '../lib/wallet';

    // Start browse music on first interaction
    document.addEventListener('click', () => {
      if (!isInitialized()) initAudio();
      playMusic('collection-browse', 1000);
    }, { once: true });

    // --- Ownership state ---
    function updateOwnership() {
      const ownedIds = getOwnedCardIds();
      const cardItems = document.querySelectorAll('.card-item');
      let ownedCount = 0;

      cardItems.forEach(item => {
        const el = item as HTMLElement;
        const id = el.dataset.id || '';
        const lockOverlay = el.querySelector('.lock-overlay') as HTMLElement;
        const dupBadge = el.querySelector('.dup-badge') as HTMLElement;
        const dupCount = el.querySelector('.dup-count') as HTMLElement;

        if (ownedIds.has(id)) {
          ownedCount++;
          el.classList.add('hover:border-gold-500/30');
          el.dataset.owned = 'true';
          lockOverlay?.classList.add('hidden');

          const count = getDuplicateCount(id);
          if (count > 1 && dupBadge && dupCount) {
            dupBadge.classList.remove('hidden');
            dupCount.textContent = String(count);
          }
        } else {
          el.classList.add('opacity-60');
          el.dataset.owned = 'false';
          lockOverlay?.classList.remove('hidden');
        }
      });

      document.getElementById('owned-count')!.textContent = String(ownedCount);
    }

    updateOwnership();

    // --- Filters ---
    const filterBtns = document.querySelectorAll('.filter-btn');
    const cardItems = document.querySelectorAll('.card-item');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        playSfx('ui-click');
        filterBtns.forEach(b => {
          b.classList.remove('bg-gold-500/20', 'text-gold-400', 'border-gold-500/30', 'active');
          b.classList.add('bg-obsidian-800', 'text-obsidian-300', 'border-obsidian-700');
        });
        btn.classList.add('bg-gold-500/20', 'text-gold-400', 'border-gold-500/30', 'active');
        btn.classList.remove('bg-obsidian-800', 'text-obsidian-300', 'border-obsidian-700');

        const filter = btn.getAttribute('data-filter');
        cardItems.forEach(card => {
          const el = card as HTMLElement;
          if (filter === 'all') {
            el.style.display = '';
          } else if (filter === 'owned') {
            el.style.display = el.dataset.owned === 'true' ? '' : 'none';
          } else {
            el.style.display = el.dataset.type === filter ? '' : 'none';
          }
        });
      });
    });

    // --- Card click → detail modal or deck add ---
    let deckBuildMode = false;

    cardItems.forEach(card => {
      card.addEventListener('click', () => {
        const el = card as HTMLElement;
        const cardId = el.dataset.id || '';
        if (el.dataset.owned === 'false') {
          playSfx('ui-click');
          window.location.href = '/playground';
          return;
        }
        playSfx('card-shimmer');
        if (deckBuildMode) {
          toggleCardInDeck(cardId);
        } else {
          openCardModal(cardId);
        }
      });
    });

    // --- Achievements ---
    import { ACHIEVEMENTS, getAchievementProgress } from '../lib/achievements';

    const TIER_BG: Record<string, string> = {
      bronze: 'from-amber-700/20 to-amber-900/20 border-amber-700/30',
      silver: 'from-gray-400/20 to-gray-600/20 border-gray-400/30',
      gold: 'from-gold-400/20 to-gold-600/20 border-gold-400/30',
    };

    function renderAchievements() {
      const grid = document.getElementById('achievement-grid');
      const countEl = document.getElementById('achievement-count');
      const totalEl = document.getElementById('achievement-total');
      if (!grid) return;

      const progress = getAchievementProgress();
      const unlockedCount = progress.filter(p => p.unlocked).length;

      if (countEl) countEl.textContent = String(unlockedCount);
      if (totalEl) totalEl.textContent = String(ACHIEVEMENTS.length);

      grid.innerHTML = progress.map(({ achievement: a, unlocked, unlockedAt }) => {
        const bg = TIER_BG[a.tier] || TIER_BG.bronze;
        const opacity = unlocked ? '' : 'opacity-40';
        const date = unlockedAt ? new Date(unlockedAt).toLocaleDateString() : '';
        return `
          <div class="card-glass p-4 rounded-xl bg-gradient-to-br ${bg} border ${opacity} transition-opacity">
            <div class="flex items-center gap-3 mb-2">
              <span class="text-2xl">${a.icon}</span>
              <div>
                <h4 class="font-display font-semibold text-obsidian-100 text-sm">${a.name}</h4>
                <span class="text-xs text-obsidian-500 capitalize">${a.tier}</span>
              </div>
              ${unlocked ? '<span class="ml-auto text-emerald-400 text-xs">&#10003;</span>' : ''}
            </div>
            <p class="text-xs text-obsidian-400">${a.description}</p>
            ${unlocked && date ? `<p class="text-xs text-obsidian-600 mt-1">Unlocked ${date}</p>` : ''}
          </div>
        `;
      }).join('');
    }

    renderAchievements();

    // --- World Cards ---
    function renderWorldCards() {
      const cities = getAllCities();
      const unlockedCities = getUnlockedCities();
      const owned = getOwnedVariants();
      const variantCount = getVariantCount();

      document.getElementById('variant-count')!.textContent = String(variantCount);
      document.getElementById('city-count')!.textContent = String(unlockedCities.size);

      // City grid
      const cityGrid = document.getElementById('city-grid')!;
      cityGrid.innerHTML = '';
      for (const city of cities) {
        const config = CITY_CATALOG[city];
        const isUnlocked = unlockedCities.has(city);
        const cityVariants = owned.filter(v => {
          const d = decodeVariantId(v.variantId);
          return d && getCityByCode(d.cityCode) === city;
        });

        const el = document.createElement('div');
        el.className = `card-glass p-3 text-center transition-all ${isUnlocked ? 'border-gold-500/30' : 'opacity-50'}`;
        el.innerHTML = `
          <div class="text-2xl mb-1">${isUnlocked ? '&#127758;' : '&#128274;'}</div>
          <p class="text-xs font-display font-semibold ${isUnlocked ? 'text-gold-400' : 'text-obsidian-500'}">${city}</p>
          <p class="text-[10px] text-obsidian-500">${config.region}</p>
          <p class="text-[10px] mt-1 ${isUnlocked ? 'text-emerald-400' : 'text-obsidian-600'}">${cityVariants.length} variant${cityVariants.length !== 1 ? 's' : ''}</p>
          <p class="text-[10px] text-obsidian-600">+${config.ability.bonus} ${config.ability.axis}</p>
        `;
        cityGrid.appendChild(el);
      }

      // Variant list
      const variantList = document.getElementById('variant-list')!;
      variantList.innerHTML = '';
      if (owned.length === 0) {
        variantList.innerHTML = `
          <div class="col-span-full text-center py-8">
            <p class="text-obsidian-500 text-sm">No variants yet. Win 3 battles in a row or get a perfect trivia score to unlock your first World Card!</p>
          </div>
        `;
        return;
      }

      for (const v of owned) {
        const decoded = decodeVariantId(v.variantId);
        if (!decoded) continue;
        const city = getCityByCode(decoded.cityCode);
        if (!city) continue;
        const card = CARD_CATALOG.find(c => c.id === v.baseCardId);
        if (!card) continue;
        const config = CITY_CATALOG[city];

        const el = document.createElement('div');
        el.className = 'card-glass p-3 flex items-center gap-3';
        el.innerHTML = `
          ${card.image ? `<img src="${card.image}" alt="${card.name}" class="w-12 h-12 rounded object-cover">` : `<span class="text-2xl">${card.icon}</span>`}
          <div class="flex-1 min-w-0">
            <p class="text-sm font-display font-semibold text-obsidian-200 truncate">${card.name}</p>
            <p class="text-xs text-gold-400">${city}</p>
            <p class="text-[10px] text-obsidian-500">+${config.ability.bonus} ${config.ability.axis} &middot; ${config.attireOptions[decoded.attireIdx]?.replace(/-/g, ' ') || 'classic'}</p>
          </div>
          <div class="text-xs text-obsidian-500">${v.source.replace('-', ' ')}</div>
        `;
        variantList.appendChild(el);
      }
    }

    renderWorldCards();

    // --- Card Detail Modal ---
    const modal = document.getElementById('card-detail-modal')!;
    const modalContent = document.getElementById('modal-content')!;
    const modalClose = document.getElementById('modal-close')!;
    const modalBackdrop = document.getElementById('modal-backdrop')!;
    let modelViewerLoaded = false;

    async function loadModelViewer() {
      if (modelViewerLoaded) return;
      await import('@google/model-viewer');
      modelViewerLoaded = true;
    }

    function openCardModal(cardId: string) {
      const card = getCardById(cardId);
      if (!card) return;

      const ability = CHARACTER_ABILITIES[cardId];
      const itemEffect = ITEM_EFFECTS[cardId];
      const arModel = getARModel(cardId);
      const arSupported = isARLikelySupported();

      let abilityHtml = '';
      if (ability) {
        abilityHtml = `
          <div class="mt-4 card-glass p-3 bg-gold-500/5 border-gold-500/20">
            <p class="text-xs text-gold-400 font-semibold mb-1">Passive: ${ability.name}</p>
            <p class="text-xs text-obsidian-400">${ability.description}</p>
          </div>`;
      }
      if (itemEffect) {
        abilityHtml = `
          <div class="mt-4 card-glass p-3 bg-purple-500/5 border-purple-500/20">
            <p class="text-xs text-purple-400 font-semibold mb-1">${itemEffect.name}</p>
            <p class="text-xs text-obsidian-400">${itemEffect.description}</p>
            <p class="text-xs text-obsidian-500 mt-1">Uses per battle: ${itemEffect.usesPerBattle}</p>
          </div>`;
      }

      let viewerHtml = '';
      if (arModel) {
        viewerHtml = `
          <div class="mt-4" id="model-viewer-container">
            <model-viewer
              src="${arModel.glbPath}"
              ${arModel.iosSrc ? `ios-src="${arModel.iosSrc}"` : ''}
              ar
              ar-modes="webxr scene-viewer quick-look"
              camera-orbit="${arModel.cameraOrbit}"
              auto-rotate
              camera-controls
              poster="${arModel.posterPath}"
              shadow-intensity="1"
              style="width: 100%; height: 300px; --poster-color: transparent;"
            >
              ${arSupported ? '<button slot="ar-button" class="btn-primary text-xs px-3 py-1.5 absolute bottom-3 left-1/2 -translate-x-1/2">View in AR</button>' : ''}
            </model-viewer>
          </div>`;
      }

      const statsHtml = card.type === 'Character' ? `
        <div class="flex items-center gap-4 mt-3 text-sm">
          <span class="text-crimson-400 font-mono">ATK ${card.atk}</span>
          <span class="text-blue-400 font-mono">DEF ${card.def}</span>
          <span class="text-emerald-400 font-mono">HP ${card.hp}</span>
        </div>` : '';

      modalContent.innerHTML = `
        <div class="h-56 bg-gradient-to-br ${card.gradient} flex items-center justify-center relative overflow-hidden rounded-t-xl">
          ${card.image ? `<img src="${card.image}" alt="${card.name}" class="w-full h-full object-cover">` : `<div class="text-6xl">${card.icon}</div>`}
        </div>
        <div class="p-6">
          <div class="flex items-center justify-between mb-1">
            <h2 class="font-display text-2xl font-bold text-obsidian-100">${card.name}</h2>
            <span class="text-xs font-mono text-obsidian-500">${card.id}</span>
          </div>
          <p class="text-sm text-obsidian-400">${card.house} &middot; ${card.element} &middot; ${card.rarity}</p>
          ${statsHtml}
          ${abilityHtml}
          ${viewerHtml}
          <p class="mt-4 text-sm text-obsidian-400 italic">"${card.quote}"</p>
          <p class="mt-2 text-xs text-obsidian-500 leading-relaxed">${card.scene}</p>
          <button class="mt-4 btn-secondary text-xs w-full" id="modal-add-to-deck">Add to Deck</button>
          ${ownedIds.has(cardId) ? '<button class="mt-2 btn-secondary text-xs w-full border-emerald-500/30 text-emerald-300 hover:bg-emerald-500/10" id="modal-mint-nft">Mint as NFT</button>' : ''}
        </div>`;

      modal.classList.remove('hidden');

      // Load model-viewer if needed
      if (arModel) loadModelViewer();

      // Add-to-deck button
      document.getElementById('modal-add-to-deck')?.addEventListener('click', () => {
        toggleCardInDeck(cardId);
        closeModal();
      });

      // Mint-as-NFT button
      document.getElementById('modal-mint-nft')?.addEventListener('click', async () => {
        if (!isWalletConnected()) {
          (window as any).showToast('Connect your wallet first using the wallet button in the header.', 'warning');
          return;
        }
        const adapter = getWalletAdapter();
        if (!adapter) {
          (window as any).showToast('Wallet adapter not available. Please reconnect your wallet.', 'warning');
          return;
        }
        const btn = document.getElementById('modal-mint-nft') as HTMLButtonElement;
        btn.textContent = 'Minting...';
        btn.disabled = true;
        const result = await mintCardAsNFT(card, adapter);
        if (result.success) {
          btn.textContent = 'Minted!';
          btn.classList.add('border-emerald-500/50', 'bg-emerald-500/10');
        } else {
          btn.textContent = result.error || 'Mint Failed';
          setTimeout(() => { btn.textContent = 'Mint as NFT'; btn.disabled = false; }, 3000);
        }
      });
    }

    function closeModal() {
      modal.classList.add('hidden');
      modalContent.innerHTML = '';
    }

    modalClose.addEventListener('click', closeModal);
    modalBackdrop.addEventListener('click', closeModal);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) closeModal();
    });

    // --- Deck Builder ---
    const deckNameInput = document.getElementById('deck-name') as HTMLInputElement;
    const saveDeckBtn = document.getElementById('save-deck-btn')!;
    const clearDeckBtn = document.getElementById('clear-deck-btn')!;
    const deckCharsEl = document.getElementById('deck-characters')!;
    const deckRelicsEl = document.getElementById('deck-relics')!;
    const deckPotionsEl = document.getElementById('deck-potions')!;
    const charCountEl = document.getElementById('char-count')!;
    const relicCountEl = document.getElementById('relic-count')!;
    const potionCountEl = document.getElementById('potion-count')!;
    const synergyPreview = document.getElementById('synergy-preview')!;
    const synergyList = document.getElementById('synergy-list')!;
    const deckErrorsEl = document.getElementById('deck-errors')!;
    const savedDecksListEl = document.getElementById('saved-decks-list')!;

    let currentDeck: Deck = { name: '', characters: [], relics: [], potions: [] };

    function toggleCardInDeck(cardId: string) {
      const card = getCardById(cardId);
      if (!card) return;
      const owned = getOwnedCardIds();
      if (!owned.has(cardId)) return;

      if (card.type === 'Character') {
        const idx = currentDeck.characters.indexOf(cardId);
        if (idx >= 0) {
          currentDeck.characters.splice(idx, 1);
        } else if (currentDeck.characters.length < DECK_RULES.maxCharacters) {
          currentDeck.characters.push(cardId);
        }
      } else if (card.type === 'Relic') {
        const idx = currentDeck.relics.indexOf(cardId);
        if (idx >= 0) {
          currentDeck.relics.splice(idx, 1);
        } else if (currentDeck.relics.length < DECK_RULES.maxRelics) {
          currentDeck.relics.push(cardId);
        }
      } else if (card.type === 'Potion') {
        const idx = currentDeck.potions.indexOf(cardId);
        if (idx >= 0) {
          currentDeck.potions.splice(idx, 1);
        } else if (currentDeck.potions.length < DECK_RULES.maxPotions) {
          currentDeck.potions.push(cardId);
        }
      }

      renderDeckSlots();
    }

    function renderDeckSlots() {
      renderSlot(deckCharsEl, currentDeck.characters, 'Click owned characters to add');
      renderSlot(deckRelicsEl, currentDeck.relics, 'Click owned relics to add');
      renderSlot(deckPotionsEl, currentDeck.potions, 'Click owned potions to add');

      charCountEl.textContent = `(${currentDeck.characters.length}/${DECK_RULES.maxCharacters})`;
      relicCountEl.textContent = `(${currentDeck.relics.length}/${DECK_RULES.maxRelics})`;
      potionCountEl.textContent = `(${currentDeck.potions.length}/${DECK_RULES.maxPotions})`;

      // Synergy preview
      const allIds = [...currentDeck.characters, ...currentDeck.relics, ...currentDeck.potions];
      const synergies = getActiveSynergies(currentDeck.characters);
      if (synergies.length > 0) {
        synergyPreview.classList.remove('hidden');
        synergyList.innerHTML = synergies.map(s =>
          `<p class="text-xs text-obsidian-300"><span class="text-gold-400">&#10003;</span> ${s.description}</p>`
        ).join('');
      } else {
        synergyPreview.classList.add('hidden');
      }

      // Highlight cards in grid that are in the deck
      document.querySelectorAll('.card-item').forEach(el => {
        const htmlEl = el as HTMLElement;
        const id = htmlEl.dataset.id || '';
        if (allIds.includes(id)) {
          htmlEl.classList.add('ring-2', 'ring-gold-500/50');
        } else {
          htmlEl.classList.remove('ring-2', 'ring-gold-500/50');
        }
      });
    }

    function renderSlot(container: HTMLElement, cardIds: string[], placeholder: string) {
      if (cardIds.length === 0) {
        container.innerHTML = `<p class="deck-placeholder text-xs text-obsidian-600 text-center py-4">${placeholder}</p>`;
        return;
      }
      container.innerHTML = cardIds.map(id => {
        const card = getCardById(id);
        if (!card) return '';
        return `
          <div class="flex items-center gap-2 p-2 rounded-lg bg-obsidian-800/50 border border-obsidian-700/50 group/slot cursor-pointer" data-remove-id="${id}">
            ${card.image ? `<img src="${card.image}" alt="${card.name}" class="w-8 h-8 rounded object-cover">` : `<span class="text-lg">${card.icon}</span>`}
            <span class="text-xs text-obsidian-200 flex-1">${card.name}</span>
            <span class="text-xs text-obsidian-600 group-hover/slot:text-crimson-400 transition-colors">&times;</span>
          </div>`;
      }).join('');

      container.querySelectorAll('[data-remove-id]').forEach(el => {
        el.addEventListener('click', () => {
          const removeId = (el as HTMLElement).dataset.removeId || '';
          toggleCardInDeck(removeId);
        });
      });
    }

    saveDeckBtn.addEventListener('click', () => {
      const name = deckNameInput.value.trim();
      if (!name) {
        showDeckError('Enter a deck name');
        return;
      }
      currentDeck.name = name;
      const result = saveDeck(currentDeck);
      if (result.success) {
        playSfx('ui-click');
        deckErrorsEl.classList.add('hidden');
        renderSavedDecks();
      } else {
        showDeckError(result.errors.join('. '));
      }
    });

    clearDeckBtn.addEventListener('click', () => {
      currentDeck = { name: '', characters: [], relics: [], potions: [] };
      deckNameInput.value = '';
      deckErrorsEl.classList.add('hidden');
      renderDeckSlots();
    });

    function showDeckError(msg: string) {
      deckErrorsEl.textContent = msg;
      deckErrorsEl.classList.remove('hidden');
    }

    function renderSavedDecks() {
      const decks = getSavedDecks();
      const activeName = getActiveDeckName();
      if (decks.length === 0) {
        savedDecksListEl.innerHTML = '<p class="text-xs text-obsidian-600">No saved decks yet.</p>';
        return;
      }
      savedDecksListEl.innerHTML = decks.map(d => {
        const isActive = d.name === activeName;
        const total = d.characters.length + d.relics.length + d.potions.length;
        return `
          <div class="flex items-center gap-3 p-3 card-glass ${isActive ? 'border-gold-500/30 bg-gold-500/5' : ''}">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-display font-semibold text-obsidian-200 truncate">${d.name}</p>
              <p class="text-xs text-obsidian-500">${d.characters.length} chars, ${d.relics.length} relics, ${d.potions.length} potions (${total} total)</p>
            </div>
            ${isActive ? '<span class="text-xs text-gold-400 font-semibold">ACTIVE</span>' : `<button class="deck-activate text-xs text-obsidian-400 hover:text-gold-400 border border-obsidian-700 rounded px-2 py-1" data-deck-name="${d.name}">Activate</button>`}
            <button class="deck-load text-xs text-obsidian-400 hover:text-obsidian-200 border border-obsidian-700 rounded px-2 py-1" data-deck-name="${d.name}">Edit</button>
            <button class="deck-delete text-xs text-obsidian-400 hover:text-crimson-400 border border-obsidian-700 rounded px-2 py-1" data-deck-name="${d.name}">&times;</button>
          </div>`;
      }).join('');

      savedDecksListEl.querySelectorAll('.deck-activate').forEach(btn => {
        btn.addEventListener('click', () => {
          setActiveDeck((btn as HTMLElement).dataset.deckName || '');
          renderSavedDecks();
        });
      });

      savedDecksListEl.querySelectorAll('.deck-load').forEach(btn => {
        btn.addEventListener('click', () => {
          const name = (btn as HTMLElement).dataset.deckName || '';
          const deck = decks.find(d => d.name === name);
          if (deck) {
            currentDeck = { ...deck, characters: [...deck.characters], relics: [...deck.relics], potions: [...deck.potions] };
            deckNameInput.value = deck.name;
            renderDeckSlots();
          }
        });
      });

      savedDecksListEl.querySelectorAll('.deck-delete').forEach(btn => {
        btn.addEventListener('click', () => {
          deleteDeck((btn as HTMLElement).dataset.deckName || '');
          renderSavedDecks();
        });
      });
    }

    // Enable deck-build mode — clicking cards adds/removes from deck
    deckBuildMode = true;
    renderDeckSlots();
    renderSavedDecks();

    // Hide loading skeleton once content is ready
    window.addEventListener('load', () => {
      const skeleton = document.getElementById('loading-skeleton');
      const cardGrid = document.getElementById('card-grid');
      if (skeleton && cardGrid) {
        skeleton.style.display = 'none';
        cardGrid.style.display = 'grid';
      }
    });
  </script>
</BaseLayout>
